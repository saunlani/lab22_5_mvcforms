<body onload="populate()">
<script>
    var sessionVal = '@Session["Color"]';
    if (sessionVal == "Red") {
        document.body.style.backgroundColor = "red";
    }
    if (sessionVal == "Yellow") {
        document.body.style.backgroundColor = "yellow";
    }
    if (sessionVal == "Blue") {
        document.body.style.backgroundColor = "blue";
        }

    var usersession = '@Session["Username"]';
    var colorsession = '@Session["Color"]';
    var listensession = '@Session["Listen"]';
    var fontsession = '@Session["Font"]';

    function populate() {
        document.getElementById('_username').value = usersession;
        document.getElementById('_color').value = colorsession;
        document.getElementById('_listen').value = listensession;
        document.getElementById('_font').value = fontsession;
    }
    window.onload = populate;

        var sessionFont = '@Session["Font"]';
    if (sessionFont == "Impact") {
        document.body.style.fontFamily = "Impact,Charcoal,sans-serif";
    }
    if (sessionFont == "Lucida") {
        document.body.style.backgroundColor = "Lucida Sans Unicode"
    }
    </script>
    @{
        ViewBag.Title = "Home Page";
    }

    <div class="jumbotron">
        <h1>ASP.NET</h1>

        <form name="daform" action="/Home/Login" method="get">

            Username:<br /><input type="text" id="_username" name="_username" /><br />

            <br />Select a color:<br />
            <select id="_color" name="_color">
                <option value="Red">Red</option>
                <option value="Yellow">Yellow</option>
                <option value="Blue">Blue</option>
            </select><br />

            <br />Select the font to be used on the pages:<br />
            <select id="_font" name="_font">
                <option value="Impact">Impact</option>
                <option value="Lucida">Lucida Console</option>
            </select><br />

            What are you listening to right now?:<br /><input type="text" id="_listen" name="_listen" /><br />

            <input type="submit" name="Register!" />
            <input type="reset" name="Reset" /><br />
        </form>
        <p class="lead">
        </p>
    </div>
</body>
